<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox (ID TETAP SAMA) -->
        <CheckBox
            android:id="@+id/cb_task_completed"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Task Title (ID TETAP SAMA) -->
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Task Title"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/cb_task_completed"
            app:layout_constraintStart_toEndOf="@id/cb_task_completed"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_task" />

        <!-- Delete Button (ID TETAP SAMA) -->
        <ImageView
            android:id="@+id/btn_delete_task"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete task"
            app:tint="@color/error"
            app:layout_constraintTop_toTopOf="@id/tv_task_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Task Description (ID TETAP SAMA) -->
        <TextView
            android:id="@+id/tv_task_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:text="Task description"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_task_title"
            app:layout_constraintStart_toEndOf="@id/cb_task_completed"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Due Date (ID TETAP SAMA) -->
        <TextView
            android:id="@+id/tv_task_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="24-12-2025 â€¢ 14:00"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_task_description"
            app:layout_constraintStart_toEndOf="@id/cb_task_completed" />

        <!-- Time Remaining (ID TETAP SAMA) -->
        <TextView
            android:id="@+id/tv_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="2 days left"
            android:textColor="@color/success"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawablePadding="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_task_due_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_task_due_date"
            app:layout_constraintStart_toEndOf="@id/tv_task_due_date" />

        <!-- Priority Badge (ID TETAP SAMA) -->
        <TextView
            android:id="@+id/tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIGH"
            android:textColor="@color/priority_high"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@color/priority_high_light"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_task_due_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_task_due_date"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
